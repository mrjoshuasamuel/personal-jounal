# Daily Journal App Environment Variables

# Application Configuration
NODE_ENV=development
PORT=3000

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_MAX_VIDEO_SIZE=104857600
REACT_APP_SUPPORTED_FORMATS=mp4,webm,avi,mov
REACT_APP_MAX_RECORDING_DURATION=300000

# AI Service Configuration (Future)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_AI_MODEL=gpt-4
REACT_APP_AI_TEMPERATURE=0.7

# Backend Configuration (Future)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here

# Database Configuration (Future)
DATABASE_URL=mongodb://localhost:27017/daily_journal
DB_USERNAME=journal_user
DB_PASSWORD=secure_password_here

# Redis Configuration (Future)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password_here

# File Storage Configuration (Future)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=daily-journal-videos
AWS_REGION=us-east-1

# Email Configuration (Future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Monitoring and Analytics (Future)
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Development Configuration
CHOKIDAR_USEPOLLING=true
GENERATE_SOURCEMAP=true
BROWSER=none

# Docker Configuration
COMPOSE_PROJECT_NAME=daily-journal